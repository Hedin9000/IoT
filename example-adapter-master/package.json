{
  "name": "low-power-button-adapter",
  "display_name": "Low Power Button Adapter",
  "version": "0.1.0",
  "description": "Low power button (433Mhz) adapter add-on for Mozilla WebThings Gateway",
  "author": "Hedin",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ."
  },
  "keywords": [
    "mozilla",
    "iot",
    "adapter",
    "example",
    "lowPower"
  ],
  "homepage": "https://github.com/mozilla-iot/example-adapter",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mozilla-iot/example-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/mozilla-iot/example-adapter/issues"
  },
  "devDependencies": {
    "eslint": "^5.12.0"
  },
  "files": [
    "LICENSE",
    "SHA256SUMS",
    "example-adapter.js",
    "index.js"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "config": {
      "ldpButtons": []
    },
    "schema": {
      "type": "object",
      "properties": {
        "ldpButtons": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "name",
              "ldpCode"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "ldpCode": {
                "type": "number",
                "description": "LdpCode"
              }
            }
          }
        }
      }
    }
  }
}
